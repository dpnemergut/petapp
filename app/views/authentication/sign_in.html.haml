%h1 Know Your Pet
= form_for @user, :as => :user, :url => yourpet_sign_in_path(@user) do |f|
  %p
    = f.label 'username:'
    = f.text_field :username
    %br/
  %p
    = f.label 'password:'
    = f.password_field :password
    %br/
  %p
    = f.submit 'Sign In',:id => "user_signin", :name => "user_signin", :class => "ButtonStyle"
  %p
    = link_to "Sign up", :yourpet_new_user, :id => "user_signup", :name => "user_signup"
  %p
    = link_to 'Forgot Your Password?', :yourpet_forgot_password, :id => "user_forgotpassword", :name => "user_forgotpassword"

